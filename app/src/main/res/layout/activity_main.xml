<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:onClick="intentSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_demo"
        />

    <Button
        android:onClick="intentDial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dial_demo"
        />

    <Button
        android:onClick="intentSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_demo"
        />
    <Button
        android:onClick="intentWaze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/waze_demo"
        />
    <Button
        android:onClick="intentStreetMaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/map_demo"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/ivData"
        android:contentDescription="Image place" />

    <TextView
        android:text="+36203385608"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web|phone"
        />


</LinearLayout>